<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Image View Styles -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Toolbar Title Styles -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Icon Button Styles -->
    <style name="MaterialIconButtonStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="backgroundTint">@color/surface_variant</item>
    </style>

    <!-- Collapsing Toolbar Title Styles -->
    <style name="ExpandedTitle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_on_gradient</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="CollapsedTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_on_gradient</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- Button Styles (Material 3) -->
    <style name="Widget.Custom.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">2dp</item>
        <item name="rippleColor">@color/ripple_tonal</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="backgroundTint">@color/tonal_button_background_tint</item>
        <item name="android:textColor">@color/tonal_button_text_color</item>
        <item name="iconTint">@color/tonal_button_icon_tint</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="Widget.Custom.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">


    </style>

    <!-- Radio Button Style -->
    <style name="Widget.Custom.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:buttonTint">@color/radio_button_tint</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.Custom.Card.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
    </style>

    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Widget.Custom.Button.Elevated" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">4dp</item>
        <item name="rippleColor">@color/ripple_elevated</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="backgroundTint">@color/elevated_button_background_tint</item>
        <item name="android:textColor">@color/elevated_button_text_color</item>
        <item name="iconTint">@color/elevated_button_icon_tint</item>
        <item name="iconPadding">12dp</item>
        <item name="iconGravity">textEnd</item>
    </style>





    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">#40A52955</item>
        <item name="strokeColor">@color/outline_button_stroke_color</item>
        <item name="strokeWidth">1.5dp</item>
    </style>
    <style name="CustomOutlinedButtonOne" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/selected_relation_bg</item>
        <item name="strokeColor">@color/outline_button_stroke_color_one</item>
        <item name="strokeWidth">1.5dp</item>
    </style>
    <style name="CustomOutlinedButtonThree" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">#AD1E4083</item>
        <item name="strokeColor">@color/outline_button_stroke_color_blue</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/outline_button_stroke_color_one</item>
        <item name="colorAccent">@color/outline_button_stroke_color_one</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/outline_button_stroke_color_one</item>
        <item name="colorAccent">@color/outline_button_stroke_color_one</item>
    </style>




</resources>