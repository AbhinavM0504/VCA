<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator
        android:propertyName="scaleX"
        android:duration="100"
        android:valueFrom="1"
        android:valueTo="1.1"
        android:valueType="floatType" />
    <objectAnimator
        android:propertyName="scaleY"
        android:duration="100"
        android:valueFrom="1"
        android:valueTo="1.1"
        android:valueType="floatType" />
    <objectAnimator
        android:propertyName="elevation"
        android:duration="100"
        android:valueFrom="4"
        android:valueTo="8"
        android:valueType="floatType" />
</set>
