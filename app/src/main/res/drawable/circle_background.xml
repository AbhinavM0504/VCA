<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Triangle pointer at top -->
    <item
        android:left="12dp"
        android:right="12dp"
        android:top="0dp">
        <rotate
            android:fromDegrees="225"
            android:pivotX="50%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
                <size
                    android:width="12dp"
                    android:height="12dp"/>
            </shape>
        </rotate>
    </item>

    <!-- Main bubble shape -->
    <item android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#FFFFFF"/>
            <size
                android:width="32dp"
                android:height="24dp"/>
        </shape>
    </item>
</layer-list>